<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_def"
        android:gravity="center"
        android:text="@string/receipt"
        android:textSize="@dimen/text_l"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin_s"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/text_title" />

    <TextView
        android:id="@+id/text_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_def"
        android:text="@string/movimentation_type"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/view_divider" />

    <TextView
        android:id="@+id/text_type_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_xs"
        app:layout_constraintTop_toBottomOf="@id/text_type"
        tools:text="TransferÃªncia enviada" />

    <TextView
        android:id="@+id/text_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_def"
        android:text="@string/value"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_type_value" />

    <TextView
        android:id="@+id/text_value_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_xs"
        app:layout_constraintTop_toBottomOf="@id/text_value"
        tools:text="R$ 100,00" />

    <TextView
        android:id="@+id/text_recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_def"
        android:text="@string/recipient"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_value_value" />

    <TextView
        android:id="@+id/text_recipient_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_xs"
        app:layout_constraintTop_toBottomOf="@id/text_recipient"
        tools:text="David Bond" />

    <TextView
        android:id="@+id/text_institution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_def"
        android:text="@string/institution"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_recipient_value" />

    <TextView
        android:id="@+id/text_institution_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_xs"
        app:layout_constraintTop_toBottomOf="@id/text_institution"
        tools:text="Banco Phi" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_def"
        android:text="@string/date_hour"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_institution_value" />

    <TextView
        android:id="@+id/text_date_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_xs"
        app:layout_constraintTop_toBottomOf="@id/text_date"
        tools:text="13/10/2020 - 15:27:02" />

    <TextView
        android:id="@+id/text_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_def"
        android:text="@string/authentication"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_date_value" />

    <TextView
        android:id="@+id/text_authentication_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_def"
        android:layout_marginTop="@dimen/margin_xs"
        app:layout_constraintTop_toBottomOf="@id/text_authentication"
        tools:text="123445345" />

    <Button
        android:id="@+id/button_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_def"
        android:backgroundTint="@color/weird_green"
        android:text="@string/share"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>